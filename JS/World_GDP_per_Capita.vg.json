{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "width": 900,
  "height": 450,
  "title": {"text":"GDP per Capita of Countries","font":"Sans-Serif"},
  "projection": {"type": "equalEarth"},
  "config": {"view": {"stroke": null}},
  "data": {
    "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/JS/ne_110m%20(3).json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer":
  [
    {
      "transform": 
      [ 
        {"calculate": "'Unavailable data for ' + datum.properties.NAME", "as": "note"}
      ],

      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data":{
        "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/JS/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": { "type": "geoshape", "fill": "#c8e2f8" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/JS/ne_110m%20(3).json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "gray" }
    },
    {
      "transform": 
      [
        {
          "lookup": "properties.NAME",
          "from": 
          {
            "data": 
            {
              "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/Data/GDP%20data.csv"
            },
            "key": "Entity",
            "fields": ["GDP per capita, PPP (constant 2017 international $)"]
          }
        }
      ],

      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": 
      {
        "color": 
        {
          "field": "GDP per capita, PPP (constant 2017 international $)",
          "type": "quantitative",
          "title":"GDP per Capita",
          "scale": 
          {
            "type": "threshold",
            "domain": [5000,10000,25000,50000, 100000],
            "scheme":"yelloworangered"
            
          }
        },
        "tooltip": 
        [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "GDP per capita, PPP (constant 2017 international $)","format":".4r", "type": "quantitative", "title": "GDP"}
        ]
      }
    }
  ]
}
