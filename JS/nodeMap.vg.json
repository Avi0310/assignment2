{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "An interactive visualization of connections among major U.S. airports in 2008. Based on a U.S. airports example by Mike Bostock.",
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "#fff",
        "strokeWidth": 1
      },
      "data": {
        "url": "https://raw.githubusercontent.com/Avi0310/fit3179-hw/main/js/ne_110m%20(3).json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      }
    },
    {
      "data":
      {
        "url": "https://raw.githubusercontent.com/Avi0310/fit3179-hw/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": { "type": "geoshape", "fill": "#c8e2f8" }
    },
    {
      "data":
      {
        "url": "https://raw.githubusercontent.com/Avi0310/fit3179-hw/main/js/ne_110m%20(3).json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "gray" }
    },
    {
      "mark": { "type": "rule", "color": "#000", "opacity": 0.1 },
      "data": { "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/Data/clean-migration-data.csv" },
      "transform": [
        { "filter": { "param": "org", "empty": false } },
        {
          "lookup": "Origin",
          "from": {
            "data": { "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/Data/clean-migration-data.csv" },
            "key": "Origin",
            "fields": ["LatOrigin", "LongOrigin"]
          }
        },
        {
          "lookup": "Destination",
          "from": {
            "data": { "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/Data/clean-migration-data.csv" },
            "key": "Destination",
            "fields": ["LatDest", "LongDest"]
          },
          "as": ["lat2", "lon2"]
        }
      ],
      "encoding": {
        "latitude": { "field": "LatOrigin" },
        "longitude": { "field": "LongOrigin" },
        "latitude2": { "field": "lat2" },
        "longitude2": { "field": "lon2" }
      }
    },
    {
      "mark": { "type": "circle" },
      "data": { "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/Data/clean-migration-data.csv" },
      "transform": [
        { "aggregate": [{ "op": "sum", "field": "Number", "as": "TotalNumber" }], "groupby": ["Origin"] },
        {
          "lookup": "Origin",
          "from": {
            "data": { "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/Data/clean-migration-data.csv" },
            "key": "Origin",
            "fields": ["Destination", "LongOrigin", "LatOrigin"]
          }
        },
        { "filter": "datum.LatOrigin !== '#N/A' && datum.LongOrigin !== '#N/A'" },
        { "calculate": "toNumber(datum.TotalNumber)", "as": "parsedNumber" }
      ],
      "params": [
        {
          "name": "org",
          "select": {
            "type": "point",
            "on": "mouseover",
            "nearest": true,
            "fields": ["Origin"],
            "clear": "mouseout"
          }
        }
      ],
      "encoding": {
        "latitude": { "field": "LatOrigin" },
        "longitude": { "field": "LongOrigin" },
        "size": {
          "field": "parsedNumber",
          "type": "quantitative",
          "scale": { "rangeMax": 100 }
        },
        "order": { "field": "parsedNumber", "sort": "ascending" }
      }
    }
  ],
  "projection": { "type": "equalEarth" },
  "width": 700,
  "height": 500
}
