{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "A population pyramid for the US in 2000.",
  "data": { "url": "https://raw.githubusercontent.com/Avi0310/assignment2/master/Data/GDPHappinessdata.csv",
  "format": {
    "type": "csv",
    "parse": {
      "Year": "number",
      "Average GDP": "number",
      "Average Happiness Index": "number"
      }
    }},
    "params": [
        {
          "name": "Year_selection",
          "value": 2021,
          "bind": {
            "input": "range",
            "min": 2015,
            "max": 2021,
            "step": 1,
            "name": "Year:  "
          }
        }
    ],
  "transform": [
    {"filter": "datum.Year == Year_selection"}
  ],
  "spacing": 0,
  "hconcat": [{
    "width": 200,
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Continents", "type": "nominal",
        "axis": null
      },
      "x": {
        "field": "Average GDP", "type": "quantitative",
        "axis": {"title": "Average GDP", "format": "s"},
        "sort": "descending",
        "scale": {"domain": [0, 60000]}
      },
      "color": {
        "field": "Continents", "type": "nominal","legend": null
      }
    }
    
  }, 
 
  {
    "width": 20,
    "view": {"stroke": null},
    "mark": {
      "type": "text",
      "align": "center"
    },
    "encoding": {
      "y": {"field": "Continents", "type": "nominal", "axis": null},
      "text": {"field": "Continents", "type": "nominal"}
    }
  }, {
  
    "width": 200,
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Continents", "type": "nominal", "title": null,
        "axis": null
      },
      "x": {
        "field": "Average Happiness Index", "type": "quantitative",
        "axis": {"title": "Average Happiness Index", "format": "s"},
        "scale": {"domain": [0, 9]}
      },
      "color": {
        "field": "Continents", "type": "nominal"
      }
    }
  }],

  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}